        <view class="item-block" bindtap="bindTapProduct" data-id="{{item.id}}">
          <image class="head-img" src="{{item['image-url']}}" mode="aspectFit"></image>
          <view class="first-line">
            <text class="name">{{item.name}}</text>
          </view>
          <view class="second-line">
            <view>
